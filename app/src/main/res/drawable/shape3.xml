<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <gradient android:angle="135" android:endColor="@color/anas" android:startColor="@color/anas" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@color/anas" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/anas" android:startColor="@color/anas" />
            <corners android:radius="20dp" />
            <stroke android:width="4dp" android:color="@color/anas" />
        </shape>

    </item>
</selector>
